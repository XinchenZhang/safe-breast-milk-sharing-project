<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="18sp"
        android:layout_below="@id/nameTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/uidTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UID: "
        android:textSize="18sp"
        android:layout_below="@id/emailTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height: "
        android:textSize="18sp"
        android:layout_below="@id/uidTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter height"
        android:layout_toRightOf="@id/heightTextView"
        android:layout_below="@id/uidTextView"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/weightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight: "
        android:textSize="18sp"
        android:layout_below="@id/heightEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter weight"
        android:layout_toRightOf="@id/weightTextView"
        android:layout_below="@id/heightEditText"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:textSize="18sp"
        android:layout_below="@id/weightEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter phone"
        android:layout_toRightOf="@id/phoneTextView"
        android:layout_below="@id/weightEditText"
        android:layout_marginTop="8dp"
        android:inputType="phone"/>


    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textSize="18sp"
        android:layout_below="@id/phoneEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter address"
        android:layout_toRightOf="@id/addressTextView"
        android:layout_below="@id/phoneEditText"
        android:layout_marginTop="8dp"
        android:inputType="textPostalAddress"/>
    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City: "
        android:textSize="18sp"
        android:layout_below="@id/addressEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/cityEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter city"
        android:layout_toRightOf="@id/cityTextView"
        android:layout_below="@id/addressEditText"
        android:layout_marginTop="8dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/stateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State: "
        android:textSize="18sp"
        android:layout_below="@id/cityEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/stateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter state"
        android:layout_toRightOf="@id/stateTextView"
        android:layout_below="@id/cityEditText"
        android:layout_marginTop="8dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/zipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZIP Code: "
        android:textSize="18sp"
        android:layout_below="@id/stateEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/zipEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter ZIP code"
        android:layout_toRightOf="@id/zipTextView"
        android:layout_below="@id/stateEditText"
        android:layout_marginTop="8dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: "
        android:textSize="18sp"
        android:layout_below="@id/zipEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/ageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter age"
        android:layout_toRightOf="@id/ageTextView"
        android:layout_below="@id/zipEditText"
        android:layout_marginTop="8dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/genderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: "
        android:textSize="18sp"
        android:layout_below="@id/ageEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/genderEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter gender"
        android:layout_toRightOf="@id/genderTextView"
        android:layout_below="@id/ageEditText"
        android:layout_marginTop="8dp"
        android:inputType="text" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_toRightOf="@id/genderEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />
</RelativeLayout>